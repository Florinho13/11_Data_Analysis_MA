library(readxl)
library(tidyverse)

# Read data using readxl
data <- read_excel("input/data.xlsx")


# Remove 2 Rows that are known to be wrong and change data type of certain columns to numeric.
data_clean <- data %>%
  mutate_at(vars(bill_length_mm, bill_depth_mm, flipper_length_mm, body_mass_g, year), as.numeric) %>%
  slice(-c(23,48))

# save in RDS format
saveRDS(data_clean,file = "input/clean_data.rds")
